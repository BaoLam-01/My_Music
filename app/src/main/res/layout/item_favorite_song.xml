<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_130sdp"
    android:layout_height="@dimen/_133sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/_15sdp"
    android:background="@drawable/item_mfy_rounded"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="@dimen/_5sdp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_5sdp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80sdp"
            android:background="@drawable/item_img_rounded"
            android:scaleType="centerCrop"
            android:src="@drawable/mfy_1" />
    </androidx.cardview.widget.CardView>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_7sdp"
        android:ellipsize="end"
        android:lines="1"
        android:paddingVertical="@dimen/_2sdp"
        android:text="Indonesian pops"
        android:textColor="@color/black" />

    <TextView
        android:layout_width="@dimen/_100sdp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_7sdp"
        android:ellipsize="end"
        android:lines="2"
        android:text="Nadine amizah, Ghea Indrawari, Yura Yunita"
        android:textSize="@dimen/_8ssp" />


</LinearLayout>